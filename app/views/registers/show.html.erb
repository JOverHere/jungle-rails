<%= form_for :register do |r| %>
  <p>
    <%= r.label :first_name %><br>
    <%= r.text_field :first_name %>
  </p>

  <p>
    <%= r.label :last_name %><br>
    <%= r.text_field :last_name %>
  </p>

  <p>
    <%= r.label :email %><br>
    <%= r.text_field :email %>
  </p>

  <p>
    <%= r.label :password %><br>
    <%= r.text_field :password %>
  </p>

  <p>
    <%= r.submit %>
  </p>
<% end %>